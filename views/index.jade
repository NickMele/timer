extends layout

block scripts
	script(src="/socket.io/socket.io.js")
	script(src="/js/timer.js")
	script(src="/js/modules/ko.timer.js")

block content
	.container
		.row
			.col-lg-3.timer-list
				include zones/_timer-list

			.col-lg-9
				div.timer-zone(data-bind="visible: data.currentTimer().data._id() !== '', with: data.currentTimer()")
					include zones/_timer-zone
				
	include zones/_timer-editor